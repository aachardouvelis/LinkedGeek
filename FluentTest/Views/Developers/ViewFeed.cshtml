@model IEnumerable<FluentTest.ViewModels.UserPosted>
@{
    ViewBag.Title = "ViewFeed";
}

<h2>ViewFeed</h2>

@foreach (var userpost in Model)
{
<div style="border-style:solid;border-width:1px;border-color:black;">
    <span style="color:forestgreen">@userpost.User.FirstName @userpost.User.LastName</span>    <i>at @userpost.Post.DatePosted.ToString("yyyy/MM/dd HH:mm")</i>
    <p>
        @userpost.Post.Content
    </p>
</div>

    
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>